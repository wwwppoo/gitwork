<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hand.control.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectAllFilm</servlet-name>
    <servlet-class>com.hand.control.SelectAllFilm</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteFilmServlet</servlet-name>
    <servlet-class>com.hand.control.DeleteFilmServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddFilmServlet</servlet-name>
    <servlet-class>com.hand.control.AddFilmServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectAllLanguage</servlet-name>
    <servlet-class>com.hand.control.SelectAllLanguage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectFilmIdServlet</servlet-name>
    <servlet-class>com.hand.control.SelectFilmIdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateFilmServlet</servlet-name>
    <servlet-class>com.hand.control.UpdateFilmServlet</servlet-class>
  </servlet>







  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectAllFilm</servlet-name>
    <url-pattern>/selectAllFilm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteFilmServlet</servlet-name>
    <url-pattern>/deleteFilmServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddFilmServlet</servlet-name>
    <url-pattern>/addFilmServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectAllLanguage</servlet-name>
    <url-pattern>/selectAllLanguage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectFilmIdServlet</servlet-name>
    <url-pattern>/selectFilmIdServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateFilmServlet</servlet-name>
    <url-pattern>/updateFilmServlet</url-pattern>
  </servlet-mapping>
  
  
  <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>com.hand.filter.LoginFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>/selectAllFilm</url-pattern>
  </filter-mapping>
</web-app>
